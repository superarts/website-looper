{
    "manifest_version": 3,

    "name": "SuperArts Website Looper",
    "description": "Loop through and reload the current page with a list of websites with a timer interval.",
    "version": "1.0.0",
    "author": "leo@superarts.org",

    "permissions": [
        "tabs",
        "storage"
    ],
    "icons": {
        "16": "image/icon/icon16.png",
        "32": "image/icon/icon32.png",
        "48": "image/icon/icon48.png",
        "128": "image/icon/icon128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": { 
        "default_popup": "popup.html"
    },
    "options_page": "options.html"
}
